# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build app1`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t app1`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system app1 && \
          adduser --system -G app1 app1

COPY dist/apps/app1 app1/
RUN chown -R app1:app1 .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix app1 --omit=dev -f install

CMD [ "node", "app1" ]
